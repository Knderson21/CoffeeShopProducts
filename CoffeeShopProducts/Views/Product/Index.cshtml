@{
}
<style>
body {
  background-image: url(https://i.pinimg.com/736x/b8/7c/a4/b87ca4cdc2fac9fba024cd2219e4e7a9.jpg);
}
</style>
@{
    foreach(Product p in Model)
    {
        <div>
            <h2>@p.Name</h2>
            <p>@p.Price</p>
            <a asp-controller="Product" asp-action="Details" asp-route-productId="@p.Id">Click to view more</a>
        </div>
    }
}